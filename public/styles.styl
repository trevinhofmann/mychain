html
  height 100%

body
  min-height 100%
  position relative
  padding-bottom 125px
  
table
  table-layout fixed
  word-wrap break-word

.holo
  margin 0
  padding 0px 7px 0px 4px
  background bottom left linear-gradient(#44aaff, #44aaff) no-repeat, bottom center linear-gradient(#44aaff, #44aaff) repeat-x, bottom right linear-gradient(#44aaff, #44aaff) no-repeat
  background-size 2px 9px, 2px 2px, 2px 9px

.spaced
	margin-top 16px
  
.fairly-spaced
  margin-top 54px
  
.very-spaced
  margin-top 200px

.padded
	padding-top 16px
  
.fairly-padded
  padding-top 54px

.very-padded
  padding-top 200px

.footer
  position absolute
  right 0
  bottom 20px
  left 0
  border 0
  padding 0
  text-align center